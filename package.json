{
  "name": "codalyn",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace @codalyn/studio run dev",
    "build": "bun run --filter='@codalyn/*' build",
    "lint": "bun run --filter='@codalyn/*' lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "bun run --filter='@codalyn/*' type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@mixedbread/mgrep": "^0.1.6",
    "shiki": "^3.19.0",
    "streamdown": "^1.6.10"
  }
}
